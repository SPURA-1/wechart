/* 水平间距 */
.container {
  padding: 20px;
  font-size: 14px;
  line-height: 24px;
}
.tabbar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  display: flex;
  background-color: #fff;
  box-shadow: 0 -1px 5px rgba(0, 0, 0, 0.1);
}
.tabbar .tabbar-item {
  flex: 1;
  padding: 12px 0;
  text-align: center;
  color: #888;
  font-size: 14px;
}
.tabbar .tabbar-item.active {
  background-color: #cecece;
  color: #007aff;
}

